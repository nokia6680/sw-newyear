include ../helpers/mixins
block variables

doctype html
html(lang="ru-RU")
	head
		meta(charset="utf-8")
		title #{title}
		<!--[if IE]>
		meta(http-equiv='X-UA-Compatible', content="IE = edge")
		<![endif]-->
		meta(name="viewport" content="width=device-width,initial-scale=1")
		meta(name="keywords" content="")
		link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous")
		link(rel="stylesheet" type='text/css' href="static/css/styles.css")
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Jost:wght@200;300;400;500;600;700;900&family=Montserrat:wght@500;600;700&display=swap" rel="stylesheet")
	body.body
		.bubbles-body#body
		include ../modules/header/header
		main.main
			section.week
				ul.week__list
					li.week__item
						<!--Заголовок/описание-->
						h2.week__title 7 недель до нового года
						p.week__name Время ещё есть!
						<!--Превью недели-->
						.week__preview
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-1
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-2
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-3
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-4
							.week__preview-info
								h2.week__subtitle Время наполнить.... вишлист
								p.week__description Запускаем режим «Успеть все до НГ»! Готовимся завершать дела, которые давно откладывали, чтобы начать 2022 с чистого листа. Но это чуть позже. А сейчас самое важное — наполнить бокал, составить свой вишлист, обсудить с друзьями новогодние планы и разыграть Тайного Санту. Главное — всегда держи под рукой наши плейлисты, которые будут напоминать о предновогодних делах.
						<!--Остаток дней до НГ-->
						.week__info#daysCount
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-5
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-6
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-7
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-8
							img(src="static/images/content/pearl.svg" alt="Новогодний шарик").round.round-9

							.week__info-frame
								.week__info-ball.week__info-ball--1
								.week__info-ball.week__info-ball--2
								.week__info-ball.week__info-ball--3
								.week__info-ball.week__info-ball--4
								.week__info-ball.week__info-ball--5
							.week__info-details
								span.week__info-nr.daysLeft 27
								span.week__info-text#daysNr дней
								p.span.week__info-about до наполнения желаний
						<!--Список дней-->
						ul.week__event.event
							+eventItem('first', 'event-1', '15', 'ноября', '2021-11-15', '15 ноября', 'Здесь какой-то текст — может быть, теплые слова приветствия?', '#', '#')
							+eventItem('imageOnly second', 'event-2', '16', 'ноября', '2021-11-16', '16 ноября', '', '#', '#')
							+eventItem('imageOnly third', 'event-1', '17', 'ноября', '2021-11-17', '17 ноября', '', '#', '#')
							+eventItem('fourth', 'event-2', '18', 'ноября', '2021-11-18', '18 ноября', 'Здесь какой-то текст — может быть, теплые слова приветствия?', '#', '#')
							+eventItem('imageOnly fifth', 'event-1', '19', 'ноября', '2021-11-19', '19 ноября', '', '#', '#')
							+eventItem('sixth', 'event-2', '20', 'ноября', '2021-11-20', '20 ноября', 'Здесь какой-то текст — может быть, теплые слова приветствия?', '#', '#')
							+eventItem('seventh', 'event-1', '21', 'ноября', '2021-11-21', '21 ноября', 'Здесь какой-то текст — может быть, теплые слова приветствия?', '#', '#')
					li.week__item.inactive
						h2.week__title 6 недель до нового года
						p.week__name &#x1F60C;&#x1F381;
					li.week__item.inactive
						h2.week__title 5 недель до нового года
						p.week__name &#x1F914;
					li.week__item.inactive
						h2.week__title 4 недели до нового года
						p.week__name &#x1F457;&#x1F3A9;	
					li.week__item.inactive
						h2.week__title 3 недели до нового года
						p.week__name &#x2728;
					li.week__item.inactive
						h2.week__title 2 недели до нового года
						p.week__name &#x1F4A5;
					li.week__item.inactive
						h2.week__title 1 недели до нового года
						p.week__name &#x26A1;
					li.week__item.inactive
						h2.week__title Итоги
						p.week__name &#x2728;&#x1F4A5;&#x26A1;
		include ../modules/footer/footer
		include ../modules/blocks/greeting
		include ../modules/blocks/age
		script(src="static/js/vendor/jquery-3.3.1.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js")
		script(src="static/js/bubbles.js")
		script(src="static/js/balls.js")
		script(src="static/js/main.js")
		script(src="static/js/counter.js")
		script(src="static/js/date.js")
		block script
